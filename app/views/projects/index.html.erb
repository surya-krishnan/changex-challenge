<p style="color: green"><%= notice %></p>

<h1>Projects</h1>

<p><%= link_to "New project", new_project_path %></p>

<table id="funds">
  <thead>
    <tr>
      <th>Title</th>
      <th>Fund</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @projects.each do |project| %>
    <tr>
      <td><%= project.title %></td>
      <td><%= project.fund.title %></td>
      <td><%= link_to "Show this project", project %></td>
    </tr>
  <% end %>
  </tbody>
</table>
